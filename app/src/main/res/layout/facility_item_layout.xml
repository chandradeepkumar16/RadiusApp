<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="#CEEDFD"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/facilityNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Name Here "
        android:textSize="20dp"
        android:textColor="#F46F73"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/facilityOptionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/options"
        app:layout_constraintTop_toBottomOf="@id/facilityNameTextView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
